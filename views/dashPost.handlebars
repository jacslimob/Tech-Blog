{{#with data}}
<div class="pt-24 flex justify-center">
    
    <div class="box-content h-auto w-1/2 p-10 rounded-lg border-2 border-solid  border-lime-900 text-lime-900 bg-lime-400 hover:bg-lime-300 hover:text-lime-900">
        <div style="display: none;">
            <input id="post" value="{{id}}">
        </div>
        <div class="text-3xl underline pb-4">
        <input id="title" value="{{title}}">

        </div>
        <div class="bg-gradient-to-r from-cyan-800 to-cyan-900 h-px mt-2 mb-2"></div>
        <div class="flex text-lg pl-8">
            -- <input id="content" value="{{content}}">
        </div>
        <div class="bg-gradient-to-r from-cyan-800 to-cyan-900 h-px mt-2 mb-2"></div>
        
        <div class="">
            <div class="flex justify-end text-sm">
            Created by: 
            {{user.name}}
            on {{format_date date_created}}
            </div>
            
        </div>
        
    </div>
</div>
{{/with}}

<div class="flex justify-center py-4">
    <button id="update" class="rounded-full text-lime-300 px-4 bg-lime-800 hover:bg-lime-300 hover:text-lime-800">
        update
    </button>
    <button id="delete" class="rounded-full text-lime-300 px-4 bg-lime-800 hover:bg-lime-300 hover:text-lime-800">
        delete
    </button>
</div>

<script src="/js/updateComment.js"></script>