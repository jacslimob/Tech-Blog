{{#with data}}
<div class="pt-24 flex justify-center">
    
    <div class="box-content h-auto w-1/2 p-10 rounded-lg border-2 border-solid  border-lime-900 text-lime-900 bg-lime-400 hover:bg-lime-300 hover:text-lime-900">
    
        <div class="text-3xl underline pb-4">
        {{title}}

        </div>
        <div class="bg-gradient-to-r from-cyan-800 to-cyan-900 h-px mt-2 mb-2"></div>
        <div class="flex text-lg pl-8">
            -- {{content}}
        </div>
        <div class="bg-gradient-to-r from-cyan-800 to-cyan-900 h-px mt-2 mb-2"></div>
        
        <div class="">
            <div class="flex justify-end text-sm">
            Created by: 
            {{user.name}}
            on {{format_date date_created}}
            </div>
            
        </div>
        
    </div>
</div>
{{/with}}
{{#if logged_in}}
<div class="flex justify-center py-4">
    <button id="myCommentBtn" class="rounded-full text-lime-300 px-4 bg-lime-800 hover:bg-lime-300 hover:text-lime-800">
        Add Comment
    </button>
</div>

<div id="commentModal" class="modal p-4">
    <div class="box-content h-auto w-1/2 p-10 rounded-lg border-2 border-solid  border-lime-900 text-lime-900 bg-lime-400 mt-48">
        <form class="form-comment">
            <div style="display:none">
                <input id="postId" value="{{data.id}}">
            </div>
        <div class="text-xl underline pb-4">
            Comment

        </div>
        <div class="bg-lime-800 h-px mt-2 mb-2"></div>
        <div class="flex text-lg pl-8">
            -- <input id="comment-body" class="p-4">
        </div>
        <div class="bg-lime-800 h-px mt-2 mb-2"></div>
        
        <div class="flex justify-end text-sm">
            <button id="submit">
                submit
            </button>
        </div>
        </form>
    </div>

</div>

<script src="/js/comment.js"></script>

{{#if data.comments}}
{{#each data.comments}}
<div class="p-4 flex justify-center">
    
    <div class="box-content h-auto w-1/2 p-10 rounded-lg border-2 border-solid  border-lime-900" style="background-color:rgb(0, 209, 118);">
    
        <div class="text-xl underline text-lime-950 pb-4">
        Comment

        </div>
        <div class="bg-gradient-to-r from-cyan-800 to-cyan-900 h-px mt-2 mb-2"></div>
        <div class="flex text-lg pl-8">
            -- {{body}}
        </div>
        <div class="bg-gradient-to-r from-cyan-800 to-cyan-900 h-px mt-2 mb-2"></div>
        
        <div class="flex justify-end text-sm">
            Created by: 
            {{user.name}}
            on {{format_date date_created}}
        </div>
        
    </div>
</div>
{{/each}}
{{/if}}
{{/if}}

